<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginAndRegisterActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TestTheme">


        <com.example.mathmurder.tablehitch.TitleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:layout_margin="20dp"

            android:text="Table Hitch"
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"/>

        <com.example.mathmurder.tablehitch.ContentTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Join us to skip queues in JCU canteen!"
            android:textSize="20dp"
            android:padding="15dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"/>


        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="TEST" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELLOOOOOOOOO"/>

</LinearLayout>