<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewGV"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <com.example.mathmurder.tablehitch.ContentTextView
        android:id="@+id/stallNameGV"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewGV"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <com.example.mathmurder.tablehitch.ContentTextView
        android:background="@drawable/rectangle_shape"
        android:id="@+id/priceTV"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/stallNameGV"
        android:layout_below="@+id/stallNameGV"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <com.example.mathmurder.tablehitch.ContentTextView
        android:background="@drawable/rectangle_shape"
        android:id="@+id/foodQuantity"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceTV"
        android:layout_alignStart="@id/priceTV"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:text="Unselected"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginBottom="15dp"/>


