<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity"
    tools:showIn="@layout/app_bar_order">

    <com.example.mathmurder.tablehitch.TitleTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"

        android:gravity="center"
        android:text="Your Order:"
        android:textColor="@android:color/black"
        android:textSize="35sp" />


    <com.example.mathmurder.tablehitch.ContentTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="20dp"
        android:id="@+id/orderReview"
        android:textColor="@color/jet"
        android:text="1. Test $300"
        />




    <com.example.mathmurder.tablehitch.ContentTextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="204dp"
        android:layout_marginStart="118dp"
        android:text="Total Price:"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <com.example.mathmurder.tablehitch.ContentTextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView4"
        android:textSize="18sp"
        android:layout_marginEnd="129dp"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp"
        android:text="Take away?" />

    <Button
        android:id="@+id/button"
        android:layout_width="133dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:text="Pay in Cash" />

</RelativeLayout>